{
  "name": "json-form-builder",
  "version": "1.0.0",
  "description": "Modern JSON to Form generator with code export",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "prod:build": "NODE_ENV=production next build",
    "prod:start": "NODE_ENV=production next start",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next out node_modules/.cache",
    "prebuild": "npm run clean && npm run type-check",
    "lint:check": "next lint --max-warnings=0"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "framer-motion": "^11.0.0",
    "zustand": "^4.5.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "lucide-react": "^0.344.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-plugin-mui-unused-classes": "^2.0.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.33",
    "autoprefixer": "^10.4.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
